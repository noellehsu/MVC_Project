@helper Line(string canvasName, System.Web.IHtmlString Labels, string datasetLabel, IHtmlString Data)
    {
        <script>
            var ctx = document.getElementById("@canvasName");
            var chart = new Chart(ctx, {
                type: "line",
                data: {
                    labels: @Labels,
                    datasets: [{
                        label: "@datasetLabel",
                        data: @Data,
                        fill: 1,
                        backgroundColor: 'rgba(255,165,0,0.3)',
                        borderColor: 'rgb(255,165,0)',
                        pointStyle: "circle",
                        pointBackgroundColor: 'rgb(0,255,0)',
                        pointRadius: 5,
                        pointHoverRadius: 10,
                    }]
                },
                options: {
                    responsive: true,
                    title: {
                        display: true,
                        fontSize: 26,
                        text: '台北1 - 6月氣溫平均值'
                    },
                    tooltips: {
                        mode: 'point',
                        intersect: true,
                    },
                    legend: {
                        position: 'bottom',
                        labels: {
                            fontColor: 'black',
                        }
                    }
                }
            });
        </script>
}