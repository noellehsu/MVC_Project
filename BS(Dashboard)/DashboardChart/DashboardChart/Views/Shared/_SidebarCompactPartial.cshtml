@model List<SidebarItem>

<nav class="col-md-2 d-none d-md-block bg-light sidebar">
    <div class="sidebar-sticky">
        <ul class="nav flex-column">
            @foreach (var item in Model)
            {
                //@Url.Action(item.Url, "Home")

                if(ViewData["Active"]==null)
                {
                    ViewData["Active"] = 1;
                }

                string active = item.Id == (int)ViewData["Active"] ? "active" : "";

                <li class="nav-item">
                    <a class="nav-link @active" href="@item.Url">
                        <span data-feather="@item.Icon"></span>
                        @item.Name<span class="sr-only">(current)</span>
                    </a>
                </li>
            }
        </ul>
    </div>
</nav>
